<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/customPrimary">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lki"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timetextalarm"
                android:text="7:30"
                android:textColor="@color/grey_shade"
                android:textSize="42dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/period"
                android:text="AM"
                android:layout_marginLeft="3dp"
                android:textSize="20dp"
                android:textColor="@color/grey_shade"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/days"
            android:textStyle="bold"
            android:text="Mo  Thu  Fri"
            android:textSize="17dp"
            android:textColor="@color/grey_shade"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_height="1dp"
        android:layout_below="@id/lki"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:background="#00344D"></View>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/side_menu"
        android:layout_marginTop="23dp"
        android:layout_marginRight="9dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_expand_more_black_24dp"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_toLeftOf="@id/side_menu"
        android:layout_marginTop="20dp"/>

</RelativeLayout>